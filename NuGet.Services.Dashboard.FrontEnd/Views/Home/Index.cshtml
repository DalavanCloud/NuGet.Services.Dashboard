@model string
<script type="text/javascript"> 

    function ShowDetails(action, controller) {
        
        $.ajax({
            url: ' /' + controller + '/' + action ,
            type: "GET",
            dataType: 'html',
            success: function (result) {

                $("#backbutton").attr('class','back-button big page-back');
                $("#title").html(controller + "<small>" + action + "</small>");                                              
                $("#maincontent").html(result);
            }
        });
    
    };


    function Toggle() {
             
        var onehour = document.getElementById('1hourdiv');
        var sixhour = document.getElementById('6hourdiv');
        var twentyfourhour = document.getElementById('24hourdiv');

        if ($("#NoofHours option:selected").val() =="1") {
            onehour.style.display = "block";
            sixhour.style.display = "none";
            twentyfourhour.style.display = "none";
        }
        else if($("#NoofHours option:selected").val() =="6")
        {           
            onehour.style.display = "none";
            sixhour.style.display = "block";
            twentyfourhour.style.display = "none";
        }
        else
        {
            onehour.style.display = "none";
            sixhour.style.display = "none";
            twentyfourhour.style.display = "block";
        }
    };
</script>
  
<div class="page secondary with-sidebar">    
    <div class="page-header">
    <div class="page-header-content" id="headercontent">
        <h1 id="title"></h1>
        <a href="/" id="backbutton"></a>
    </div>
</div>    
    <div class="page-region">
          <div style="position:absolute; top: 1em; right: 1em;"> 
              <div class="input-control switch" data-role="input-control">
                  <label class="inline-block" style="margin-right: 20px">
                     
                        @if (Model.Equals("Prod"))
                        { 
                                                <input type="checkbox" checked onchange="location.href='@Url.Action("UpdateEnvironment", "Home",new {envName = "QA"})'" />
                                                <span class="fg-color-darken">Prod</span>
                        }
                        else
                        {
                            <input type="checkbox" onchange="location.href='@Url.Action("UpdateEnvironment", "Home",new {envName = "Prod"})'" />
                            <span class="fg-color-darken">QA</span>
                        }
                                              
                  </label>                 
              </div>
              </div>
            <div id="maincontent" >@Html.Action("Tiles", "Home");</div>
        </div>  
        
    
</div>

