<script src="~/Scripts/pagecontrol.js" type="text/javascript"></script>
<div class="page secondary with-sidebar">
    <div class="page-header">
        <div class="page-header-content" id="headercontent">
            <h1 id="title">SLA<small>Detail</small></h1>
            <a href="/" id="backbutton" class=" back-button big page-back"></a>
        </div>
    </div>
</div>
<div class="page-control" data-role="page-control" style="height: 100%">   
    <span class="menu-pull"></span>
    <div class="menu-pull-bar"></div>    
    <ul>
        
        <li class="active"><a href="#RequestsToday">Request Categorization Weekly trend</a></li>
        <li ><a href="#RequestsThisWeek">Over all Requests Weekly Trend</a></li>
        <li><a href="#Errors">Errors Weekly Trend</a></li>
      
    </ul>    
    <div class="frames">
        <div class="frame active" id="RequestsToday">@Html.Action("RequestsToday", "SLA");</div>
        <div class="frame" id="RequestsThisWeek">@Html.Action("RequestsThisWeek", "SLA");</div>
        <div class="frame" id="Errors">@Html.Action("ErrorsThisWeek", "SLA");</div>
       
    </div>

</div>


