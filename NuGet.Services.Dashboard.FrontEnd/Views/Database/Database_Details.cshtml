<script src="~/Scripts/pagecontrol.js" type="text/javascript"></script>
<div class="page secondary with-sidebar">
    <div class="page-header">
        <div class="page-header-content" id="headercontent">
            <h1 id="title">Database<small>Detail</small></h1>
            <a href="/" id="backbutton" class=" back-button big page-back"></a>
        </div>
    </div>
</div>
<div class="page-control" data-role="page-control" style="height: 100%">
    <span class="menu-pull"></span>
    <div class="menu-pull-bar"></div>
    <ul>
        <li class="active"><a href="#WeeklyTrend">Weekly Trend</a></li>
        <li><a href="#IndexFragmentation">Index Fragmentation Details</a></li>      
        <li><a href="#DBSize">Db Size</a></li>  
    </ul>
    <div class="frames">
        <div class="frame active" id="WeeklyTrend">
            <div>
                @Html.Action("DBRequestsThisWeek", "Database")
            </div>
            <div>
                @Html.Action("DBConnectionsThisWeek", "Database")
            </div>
        </div>
        <div class="frame" id="IndexFragmentation">@Html.Action("DBIndexFragmentation", "Database")</div>
        <div class="frame" id="DBSize">@Html.Action("DBSizeDetails", "Database")</div>
    </div>

</div>


